.settings-box.hide-settings
    .toggle-settings
        i.fa.fa-cog.fa-fw
    .settings-content.text-center
        .option-box.color-options
            h4.toggle-settings-title Color Option
            - var themes =['green-theme','blue-theme','red-theme','orange-theme','black-theme']
            ul.list-unstyled
                each theme in themes
                    li(data-theme=theme)
        .option-box.font-options
            h4.toggle-settings-title Font Option
            - var fonts =['Open_Sans','Titillium_Web','Roboto']
            select.form-control
                each font in fonts
                    option(value=font)=font +" Font"
        .option-box.sidebar-options
            h4.toggle-settings-title Sidebar Option
             - var sidebarColors =['sidebar-green-theme','sidebar-blue-theme','sidebar-red-theme','sidebar-orange-theme','sidebar-black-theme']
            ul.list-unstyled
                each sidebarColor in sidebarColors
                    li(data-sidebar=sidebarColor)
                span.text-center.restore-spane.default-options-side-bar Retore Default
            .sidebar-width
                .custom-control.custom-radio.radio-no-sidebar
                    input#radio-no-sidebar.custom-control-input(type='radio', name='customRadio')
                    label.custom-control-label(for='radio-no-sidebar') Full Screen
                .custom-control.custom-radio.radio-half-side-bar
                    input#radio-half-side-bar.custom-control-input(type='radio', name='customRadio')
                    label.custom-control-label(for='radio-half-side-bar') Icon Screen
            span.text-center.restore-spane.default-options-side-bar-width Retore Default

        
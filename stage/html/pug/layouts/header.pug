    i.fa.fa-expand-alt.fa-lg.header-icon.toggle-full-screen
    form#live-search
        input(type="search")(name="search")(placeholder="Search..")#search_icon.js-tag-input

    .right-icon
        a(href="upload.html")
            i.fas.fa-plus-circle.fa-lg.header-icon.toggle-add-content
    
        .dropdown.username-container
            .username#username(data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                img.avatar.rounded-circle(src="img/avatar.svg" alt="User")
                span.user Admin
                i.fa.fa-angle-down.fa-lg
            .dropdown-menu.dropdown-menu-right(aria-labelledby='username')
                .user-info
                    h4 Admin User
                    p.text-muted Admin User
                hr
                ul.activities-list.list-unstyled
                    li Added comment On Post 
                    li Edited comment On Post 
                    li Created Category On Post
                hr
                .row.user-options-links
                    .col
                        .link-box
                            i.fa.fa-user-cog.fa-lg.fa-fw.i-user-config
                            span 
                                a(href="settings.html") Settings
                    .col
                        .link-box(data-toggle="modal")(data-target="#exampleModal")
                            i.fa.fa-user.fa-lg.fa-fw.i-user-profile
                            span My Profile

                    .col
                        .link-box
                            i.fa.fa-power-off.fa-lg.fa-fw.i-user-logout
                            span Logout




